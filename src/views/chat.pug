extends layout.pug

block contenu
    h1 Bienvenue sur le chat #{pseudo}

    #chat-app
        .chat-users
            h2 Utilisateurs connectés
            ul
        
        .chatbox-area
            .chatbox-messages
            
            form(action="/chat", method="get").chatbox-form
                input(type="text", name="message", placeholder="Votre message … (Entrée pour envoyer)")

block scripts
    script(src="/socket.io/socket.io.js",defer)
    script(src="/static/app-client.js",defer)